//-mixins

mixin checkbox-buttons__label(name, value)
    label.checkbox-buttons__label
        input.checkbox-buttons__input(type="checkbox", value= value)
        span.checkbox-buttons__input-fake
            svg.checkbox-buttons__vector(width="10" height="8" viewBox="0 0 10 8" fill="none")
                path(d="M1.46439 2.29245L5.70703 6.53509L4.29282 7.9493L0.0501771 3.70666L1.46439 2.29245Z" fill="url(#paint0_linear)")
                path(d="M8.53546 0.878232L9.94967 2.29245L4.29282 7.9493L2.8786 6.53509L8.53546 0.878232Z" fill="url(#paint1_linear)")
                defs
                    linearGradient(id="paint0_linear" x1="7.82835" y1="0.171125" x2="2.1715" y2="5.82798" gradientUnits="userSpaceOnUse")
                        stop(stop-color="#BC9CFF")
                        stop(offset="1" stop-color="#8BA4F9")
                    linearGradient(id="paint1_linear" x1="7.82835" y1="0.171125" x2="2.1715" y2="5.82798" gradientUnits="userSpaceOnUse")
                        stop(stop-color="#BC9CFF")
                        stop(offset="1" stop-color="#8BA4F9")
        span.checkbox-buttons__span= name

//- checkbox-buttons

mixin checkbox-buttons(header ,firstTick, firstTickValue, secondTick, secondTickValue, thirdTick, thirdTickValue)
    .checkbox-buttons
        span.checkbox-buttons__header-text= header
        ul.checkbox-buttons__ul
            +checkbox-buttons__label(firstTick, firstTickValue)
            +checkbox-buttons__label(secondTick, secondTickValue)
            +checkbox-buttons__label(thirdTick, thirdTickValue)

+checkbox-buttons('Checkbox buttons', 'Можно курить', 'youCanSmoke', 'Можно с питомцами', 'canWithPats', 'Можно пригласить гостей (до 10 человек)', 'canWithGuests') 