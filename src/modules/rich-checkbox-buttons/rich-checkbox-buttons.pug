//- mixins

mixin rich-checkbox-buttons__label(name, description, value)
    label.rich-checkbox-buttons__label
        input.rich-checkbox-buttons__input(type="checkbox", value= value)
        span.rich-checkbox-buttons__input-fake
            svg.rich-checkbox-buttons__vector(width="10" height="8" viewBox="0 0 10 8" fill="none")
                path(d="M1.46439 2.29245L5.70703 6.53509L4.29282 7.9493L0.0501771 3.70666L1.46439 2.29245Z" fill="url(#paint0_linear)")
                path(d="M8.53546 0.878232L9.94967 2.29245L4.29282 7.9493L2.8786 6.53509L8.53546 0.878232Z" fill="url(#paint1_linear)")
                defs
                    linearGradient(id="paint0_linear" x1="7.82835" y1="0.171125" x2="2.1715" y2="5.82798" gradientUnits="userSpaceOnUse")
                        stop(stop-color="#BC9CFF")
                        stop(offset="1" stop-color="#8BA4F9")
                    linearGradient(id="paint1_linear" x1="7.82835" y1="0.171125" x2="2.1715" y2="5.82798" gradientUnits="userSpaceOnUse")
                        stop(stop-color="#BC9CFF")
                        stop(offset="1" stop-color="#8BA4F9")
        .rich-checkbox-buttons__checkbox-text   
            span.rich-checkbox-buttons__checkbox-name= name
            span.rich-checkbox-buttons__checkbox-description= description

//- rich-checkbox-dropdown
mixin rich-checkbox-buttons(name)
    .rich-checkbox-buttons
        span.rich-checkbox-buttons__header-text= name 
        ul.rich-checkbox-buttons__container
            +rich-checkbox-buttons__label('Широкий коридор', 'Ширина коридоров в номере не менее 91 см.')
            +rich-checkbox-buttons__label('Помощник для инвалидов', 'На 1 этаже вас встретит специалист и проводит до номера')

+rich-checkbox-buttons('rich checkbox buttons')
        